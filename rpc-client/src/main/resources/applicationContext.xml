<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

       <context:component-scan base-package="org.windwant.rpc.client"/>
       <context:property-placeholder location="classpath:application.properties"/>

       <!--服务发现服务-->
       <bean id="serviceDiscory" class="org.windwant.rpc.client.core.ServiceDiscovery">
              <constructor-arg name="registryAddress" value="${registry.address}"/>
       </bean>

       <bean id="rpcProxy" class="org.windwant.rpc.client.core.RpcProxy">
              <constructor-arg name="serviceDiscovery" ref="serviceDiscory"/>
       </bean>
</beans>